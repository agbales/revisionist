{
    "manifest_version": 2,
    "name": "Revisionist",
    "description": "Revise the Internet!",
    "version": "0.0.0.2",
    "permissions": [ "activeTab" ],
    "background": {
        "scripts": [ "toggle.js" ]
     },
    "browser_action": {
        "default_title": "Revisionist"
    },
    "icons": { "16": "./icons/icon16.png",
        "48": "./icons/icon48.png",
       "128": "./icons/icon128.png" 
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "html2canvas.min.js"
            ],
            "run_at": "document_end"
        }
    ]
}